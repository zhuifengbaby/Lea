@{
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_OrderForm.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
        InitialPage();
        initControl();
    });
    //初始化页面
    function InitialPage() {
        $("#Arear").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "Arear" },
            id: "ItemValue",
            text: "ItemName",
            description: "请选择",
            height: "200px"
        });
        $("#ArearNumber").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson2",
            param: { EnCode: "ArearNumber" },
            id: "ItemValue",
            text: "ItemName",
            description: "请选择",
            height: "200px"
        });
        $("#HouseType").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "HouseType" },
            id: "ItemValue",
            text: "ItemName",
            description: "请选择",
            height: "200px"
        });
        $("#HH").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "HouseStatus" },
            id: "ItemValue",
            text: "ItemName",
            description: "请选择",
            height: "200px"
        });
        var role = '@LeaRun.Application.Code.OperatorProvider.Provider.Current().CompanyId';
        if (role != "镇联动中心") {

            $("#Arear").attr("disabled", true);
            $("#Arear").ComboBoxSetValue(role);
        } else if (role != "镇联动中心" && !!keyValue)
        {
            $("#Address").attr("disabled", true);
        }
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 240.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载明细表
  
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../BaseManage/H_House/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data.entity);
                    //明细

                }
            })
        }
    }
    //保存表单
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../BaseManage/H_House/SaveFormADD?keyValue=" + keyValue,
            param: { "strEntity": JSON.stringify(postData)},
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div class="bills" >
 <div style="height:190px;overflow-y:auto;margin:10px 10px;">
    <table class="form" style="width: 100%;">
        <tr>
            <th class="formTitle" style="width: 60px;">村居</th>
            <td class="formValue"><div id="Arear" type="select" class="ui-select"></div></td>
            <th class="formTitle" style="width: 60px;">网格名称</th>
            <td class="formValue"><div id="ArearNumber" type="select" class="ui-select"></div></td>
        </tr>
        <tr>
            <th class="formTitle" style="width: 60px;">坐落详址</th>
            <td class="formValue"><input id="Address" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"></td>
            <th class="formTitle" style="width: 60px;">房屋性质</th>
            <td class="formValue"><div id="HouseType" type="select" class="ui-select"></td>
        </tr>
        <tr>
            <th class="formTitle" style="width: 60px;">二维码门牌</th>
            <td class="formValue"><input id="CodeNumber" type="text" class="form-control"></td>
            <th class="formTitle" style="width: 60px;">产权人</th>
            <td class="formValue"><input id="CQRen" type="text" class="form-control"></td>
        </tr>
        <tr>
            <th class="formTitle" style="width: 60px;">房屋状态<font face="宋体">*</font></th>
            <td class="formValue"><div id="HH" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div></td>
        </tr>
    </table>
 </div>
</div>
