@{
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
       
        InitialPage();

    });
    function InitialPage() {
        $("#ShenName").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "删除原因" },
            id: "ItemValue",
            text: "ItemName",
            description: "请选择",
            height: "200px"
        });
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        var ShenName = $('#ShenName').attr('data-value');
        $.SaveForm({
            url: "../../BaseManage/H_RenInfo/RemoveForm?keyValue=" + keyValue+"&Reson="+ShenName,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
          <tr>
            <td class="formTitle">删除原因:</td>
            <td class="formValue">
                <div id="ShenName" type="select" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
            </td>
        </tr>
     
    </table>
</div>
