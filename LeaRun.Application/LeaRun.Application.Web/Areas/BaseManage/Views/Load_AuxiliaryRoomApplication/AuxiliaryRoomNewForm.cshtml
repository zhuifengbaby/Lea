@{
    ViewBag.Title = "辅房审批";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
        initControl();
    })
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../BaseManage/Load_AuxiliaryRoomApplication/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                }
            })
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../BaseManage/Load_AuxiliaryRoomApplication/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-left: 30px; margin-top: 40px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">申请人</td>
            <td class="formValue">
                <input id="ApplicantName" type="text" class="form-control" />
            </td>
            <td class="formTitle">户口性质</td>
            <td class="formValue">
                <select id="HouseholdNature" name="starts">
                    <option value="2">农民</option>
                    <option value="1">居民</option>
                </select>
            </td>
            <td class="formTitle">签字确认</td>
            <td class="formValue">
                <select id="ApplicantSignature" name="starts">
                    <option value="2">已确认</option>
                    <option value="1">未确认</option>
                </select>
            </td>
        </tr>
        <tr>
            <th class="formTitle">村<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="Village" type="text" class="form-control">
            </td>
            <th class="formTitle">组<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="GroupName" type="text" class="form-control">
            </td>
            <th class="formTitle">号<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="HouseNumber" type="text" class="form-control">
            </td>
        </tr>
        <tr>
            <th class="formTitle">宅基地批准书号</th>
            <td class="formValue">
                <input id="HomesteadApprovalNumber" type="text" class="form-control" />
            </td>
            <td class="formTitle">申请人确认时间</td>
            <td class="formValue">
                <input id="ApplicantSignatureDate"  type="text" class="form-control" value="@LeaRun.Util.Time.GetToday()" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">申请辅房建设内容</td>
            <td class="formValue">
                <select id="AuxiliaryConstructionContent" name="starts">
                    <option value="1">辅房</option>
                    <option value="2">围墙</option>
                    <option value="3">场地</option>
                    <option value="4">石驳岸</option>
                    <option value="4">其他</option>
                </select>
            </td>
        </tr>
        <tr>
            <th class="formTitle">村社区审核意见<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="VillageCommunityReview" type="text" class="form-control">
            </td>
            <th class="formTitle">村社区经办人<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="VillageCommunityAgent" type="text" class="form-control">
            </td>
            <th class="formTitle">村社区经办时间<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="VillageCommunityAgentDate" type="text" class="form-control">
            </td>
        </tr>
        <tr>
            <th class="formTitle">镇领导单位意见<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipUnitOpinion" type="text" class="form-control">
            </td>
            <th class="formTitle">镇领导单位经办人<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipAgent1" type="text" class="form-control">
            </td>
            <th class="formTitle">镇领导单位经办时间<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipAgentDate1" type="text" class="form-control">
            </td>
        </tr>
        <tr>
            <th class="formTitle">镇领导核准意见<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipApprovalOpinion" type="text" class="form-control">
            </td>
            <th class="formTitle">镇领导核准经办人<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipApprovalAgent" type="text" class="form-control">
            </td>
            <th class="formTitle">镇领导核准经办时间<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="TownLeadershipApprovalAgentDate" type="text" class="form-control">
            </td>
        </tr>
    </table>
</div>
