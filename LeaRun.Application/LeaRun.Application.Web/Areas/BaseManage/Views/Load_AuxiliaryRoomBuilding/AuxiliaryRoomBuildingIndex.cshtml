@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../BaseManage/Load_AuxiliaryRoomBuilding/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '状态', name: 'ApproveStatus', index: 'ApproveStatus', width: 100, align: 'left', sortable: true },
                { label: 'ID', name: 'ID', index: 'ID', width: 100, align: 'left', sortable: true },
                { label: '申请户主', name: 'ApplicantHolder', index: 'ApplicantHolder', width: 100, align: 'left', sortable: true },
                { label: '身份证号', name: 'IDNumber', index: 'IDNumber', width: 100, align: 'left', sortable: true },
                { label: '乡村建设规划许可证号', name: 'ConstructionLicenseNumber', index: 'ConstructionLicenseNumber', width: 100, align: 'left', sortable: true },
                { label: '施工负责人', name: 'ConstructionManager', index: 'ConstructionManager', width: 100, align: 'left', sortable: true },
                { label: '农村宅基地批准书号', name: 'HomesteadApprovalNumber', index: 'HomesteadApprovalNumber', width: 100, align: 'left', sortable: true },
                { label: '开工日期', name: 'CommencementDate', index: 'CommencementDate', width: 100, align: 'left', sortable: true },
                { label: '竣工日期', name: 'CompletionDate', index: 'CompletionDate', width: 100, align: 'left', sortable: true },
                { label: '村社区意见', name: 'VillageOpinion', index: 'VillageOpinion', width: 100, align: 'left', sortable: true },
                { label: '村社区经办人', name: 'VillageOperator', index: 'VillageOperator', width: 100, align: 'left', sortable: true },
                { label: '村社区经办时间', name: 'VillageOperateTime', index: 'VillageOperateTime', width: 100, align: 'left', sortable: true },
                { label: '规划建设管理部门意见', name: 'PlanningManagementOpinion', index: 'PlanningManagementOpinion', width: 100, align: 'left', sortable: true },
                { label: '规划建设管理部门经办人', name: 'PlanningManagementOperator', index: 'PlanningManagementOperator', width: 100, align: 'left', sortable: true },
                { label: '规划建设管理部门经办时间', name: 'PlanningManagementOperateTime', index: 'PlanningManagementOperateTime', width: 100, align: 'left', sortable: true },
                { label: '自然资源部门意见', name: 'NaturalResourceOpinion', index: 'NaturalResourceOpinion', width: 100, align: 'left', sortable: true },
                { label: '自然资源部门经办人', name: 'NaturalResourceOperator', index: 'NaturalResourceOperator', width: 100, align: 'left', sortable: true },
                { label: '自然资源部门经办时间', name: 'NaturalResourceOperateTime', index: 'NaturalResourceOperateTime', width: 100, align: 'left', sortable: true },
                { label: '农业农村部门意见', name: 'AgricultureRuralOpinion', index: 'AgricultureRuralOpinion', width: 100, align: 'left', sortable: true },
                { label: '农业农村部门经办人', name: 'AgricultureRuralOperator', index: 'AgricultureRuralOperator', width: 100, align: 'left', sortable: true },
                { label: '农业农村部门经办时间', name: 'AgricultureRuralOperateTime', index: 'AgricultureRuralOperateTime', width: 100, align: 'left', sortable: true },
                { label: '乡镇镇府验收意见', name: 'TownshipAcceptanceOpinion', index: 'TownshipAcceptanceOpinion', width: 100, align: 'left', sortable: true },
                { label: '乡镇镇府验收经办人', name: 'TownshipAcceptanceOperator', index: 'TownshipAcceptanceOperator', width: 100, align: 'left', sortable: true },
                { label: '乡镇镇府验收经办时间', name: 'TownshipAcceptanceOperateTime', index: 'TownshipAcceptanceOperateTime', width: 100, align: 'left', sortable: true },
                { label: '备注', name: 'Remark', index: 'Remark', width: 100, align: 'left', sortable: true },
                { label: '户主姓名', name: 'OwnerName', index: 'OwnerName', width: 100, align: 'left', sortable: true },
                { label: '村组', name: 'VillageGroup', index: 'VillageGroup', width: 100, align: 'left', sortable: true },
                { label: '绘制人', name: 'Drawer', index: 'Drawer', width: 100, align: 'left', sortable: true },
                { label: '绘制时间', name: 'DrawingTime', index: 'DrawingTime', width: 100, align: 'left', sortable: true },
                { label: '建档时间', name: 'CreateTime', index: 'CreateTime', width: 100, align: 'left', sortable: true },
                { label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 100, align: 'left', sortable: true },

            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'ID',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加验收意见表',
            url: '/BaseManage/Load_AuxiliaryRoomBuilding/AuxiliaryRoomBuildingNewForm',
            width: "750px",
            height: "500px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑验收意见表',
                url: '/BaseManage/Load_AuxiliaryRoomBuilding/AuxiliaryRoomBuildingNewForm?keyValue=' + keyValue,
                width: "750px",
                height: "500px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../BaseManage/Load_AuxiliaryRoomBuilding/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的验收意见表！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <div id="queryCondition" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a data-value="CardNumber">身份证号码</a></li>
                        </ul>
                    </div>
                </td>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
