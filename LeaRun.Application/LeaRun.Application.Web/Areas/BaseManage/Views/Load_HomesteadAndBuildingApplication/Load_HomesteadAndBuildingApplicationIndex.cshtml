@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../BaseManage/Load_HomesteadAndBuildingApplication/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '状态', name: 'Status', index: 'Status', width: 100, align: 'left', sortable: true },
                { label: 'ID', name: 'ID', index: 'ID', width: 100, align: 'left', sortable: true },
                { label: '申请人姓名', name: 'ApplicantName', index: 'ApplicantName', width: 100, align: 'left', sortable: true },
                { label: '申请人性别', name: 'Gender', index: 'Gender', width: 100, align: 'left', sortable: true },
                { label: '年龄', name: 'Age', index: 'Age', width: 100, align: 'left', sortable: true },
                { label: '联系电话', name: 'ContactNumber', index: 'ContactNumber', width: 100, align: 'left', sortable: true },
                { label: '身份证号', name: 'IDNumber', index: 'IDNumber', width: 100, align: 'left', sortable: true },
                { label: '户口所在地', name: 'RegisteredResidence', index: 'RegisteredResidence', width: 100, align: 'left', sortable: true },
                { label: '家庭成员姓名', name: 'FamilyMemberName', index: 'FamilyMemberName', width: 100, align: 'left', sortable: true },
                { label: '家庭成员与户主关系', name: 'RelationshipWithHouseholder', index: 'RelationshipWithHouseholder', width: 100, align: 'left', sortable: true },
                { label: '家庭成员身份证号码', name: 'FamilyMemberIDNumber', index: 'FamilyMemberIDNumber', width: 100, align: 'left', sortable: true },
                { label: '家庭成员户口所在地', name: 'FamilyMemberRegisteredResidence', index: 'FamilyMemberRegisteredResidence', width: 100, align: 'left', sortable: true },
                { label: '宅基地面积', name: 'LandArea', index: 'LandArea', width: 100, align: 'left', sortable: true },
                { label: '建筑面积', name: 'BuildingArea', index: 'BuildingArea', width: 100, align: 'left', sortable: true },
                { label: '权属证号码', name: 'OwnershipCertificateNumber', index: 'OwnershipCertificateNumber', width: 100, align: 'left', sortable: true },
                { label: '宅基地情况', name: 'LandSituation', index: 'LandSituation', width: 100, align: 'left', sortable: true },
                { label: '申请宅基地面积', name: 'AppliedLandArea', index: 'AppliedLandArea', width: 100, align: 'left', sortable: true },
                { label: '申请占地面积', name: 'AppliedOccupiedArea', index: 'AppliedOccupiedArea', width: 100, align: 'left', sortable: true },
                { label: '申请地址', name: 'AppliedAddress', index: 'AppliedAddress', width: 100, align: 'left', sortable: true },
                { label: '东至', name: 'EasternBoundary', index: 'EasternBoundary', width: 100, align: 'left', sortable: true },
                { label: '南至', name: 'SouthernBoundary', index: 'SouthernBoundary', width: 100, align: 'left', sortable: true },
                { label: '西至', name: 'WesternBoundary', index: 'WesternBoundary', width: 100, align: 'left', sortable: true },
                { label: '北至', name: 'NorthernBoundary', index: 'NorthernBoundary', width: 100, align: 'left', sortable: true },
                { label: '土地性质', name: 'LandNature', index: 'LandNature', width: 100, align: 'left', sortable: true },
                { label: '建房类型', name: 'BuildingType', index: 'BuildingType', width: 100, align: 'left', sortable: true },
                { label: '建筑面积', name: 'AppliedBuildingArea', index: 'AppliedBuildingArea', width: 100, align: 'left', sortable: true },
                { label: '建筑层数', name: 'BuildingFloors', index: 'BuildingFloors', width: 100, align: 'left', sortable: true },
                { label: '建筑高度', name: 'BuildingHeight', index: 'BuildingHeight', width: 100, align: 'left', sortable: true },
                { label: '是否已征求意见', name: 'ConsultationSought', index: 'ConsultationSought', width: 100, align: 'left', sortable: true },
                { label: '申请理由', name: 'ApplicationReason', index: 'ApplicationReason', width: 100, align: 'left', sortable: true },
                { label: '备注', name: 'Remarks', index: 'Remarks', width: 100, align: 'left', sortable: true },
                { label: '操作时间', name: 'CreateDate', index: 'CreateDate', width: 100, align: 'left', sortable: true },
                { label: '操作人', name: 'CreateUser', index: 'CreateUser', width: 100, align: 'left', sortable: true },
               
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'ID',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加农村宅基地和建房（规划许可）申请审批',
            url: '/BaseManage/Load_HomesteadAndBuildingApplication/Load_HomesteadAndBuildingApplicationIndexNewForm',
            width: 'px',
            height: 'px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑农村宅基地和建房（规划许可）申请',
                url: '/BaseManage/Load_HomesteadAndBuildingApplication/Load_HomesteadAndBuildingApplicationIndexNewForm?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../BaseManage/Load_HomesteadAndBuildingApplication/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的农村宅基地和建房（规划许可）申请！', 0);
        }
    }

    //申报
    function btn_approve() {
        var IDNumber = $('#gridTable').jqGridRowValue('IDNumber');
        if (IDNumber) {
            $.SaveDataToApprove({
                url: '../../BaseManage/Load_HomesteadAndBuildingApplication/SaveDataToApprove',
                param: { keyValue: IDNumber },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要申报的农村宅基地和建房（规划许可）申请！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <div id="queryCondition" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a data-value="CardNumber">身份证号码</a></li>
                        </ul>
                    </div>
                </td>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_approve()"><i class="fa fa-trash-o"></i>&nbsp;申报</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
