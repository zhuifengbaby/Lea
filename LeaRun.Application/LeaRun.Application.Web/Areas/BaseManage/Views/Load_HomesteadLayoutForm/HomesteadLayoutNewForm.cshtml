@{
    ViewBag.Title = "宅基地审批";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    $(function () {
        initControl();
    })
    //初始化控件
    function initControl() {
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../BaseManage/Load_HomesteadLayoutForm/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                }
            })
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../BaseManage/Load_HomesteadLayoutForm/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-left: 10px; margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <th class="formTitle">申请人姓名<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ApplicantName" type="text" class="form-control" />
            </td>
            <th class="formTitle">联系方式<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ContactNumber" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <th class="formTitle">房屋位置<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="BuildingLocation" type="text" class="ConstructionLicenseNumber" />
            </td>
        </tr>
        <tr>
            <th class="formTitle">批准书号<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ApprovalNumber" type="text" class="form-control">
            </td>
            <th class="formTitle">申请建房人<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ApplicantForBuilding" type="text" class="form-control">
            </td>
            <th class="formTitle">签字时间<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ApplicantForBuildingSignDate" type="text" class="ConstructionLicenseNumber" />
            </td>
        </tr>
        <tr>
            <th class="formTitle">建房施工单位<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ConstructionUnit" type="text" class="form-control">
            </td>
            <th class="formTitle">施工单位签字时间<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="ConstructionUnitSignDate" type="text" class="form-control">
            </td>
        </tr>
        <tr>
            <td class="formTitle">所属社区</td>
            <td class="formValue">
                <input id="BelongingCommunity" type="text" class="form-control" />
            </td>
            <td class="formTitle">社区签字时间</td>
            <td class="formValue">
                <input id="CommunitySignDate" type="text" class="form-control" value="@LeaRun.Util.Time.GetToday()" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">农村农业部门</td>
            <td class="formValue">
                <input id="RuralAgriculturalDepartment" type="text" class="form-control" />
            </td>
            <td class="formTitle">农村农业部门签字时间</td>
            <td class="formValue">
                <input id="RuralAgriculturalDepartmentSignDate" type="text" class="form-control" value="@LeaRun.Util.Time.GetToday()" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">镇建设规划管理部门</td>
            <td class="formValue">
                <input id="TownPlanningManagementDepartment" type="text" class="form-control" />
            </td>
            <td class="formTitle">镇建设规划管理部门签字时间</td>
            <td class="formValue">
                <input id="TownPlanningManagementDepartmentSignDate" type="text" class="form-control" value="@LeaRun.Util.Time.GetToday()" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">其他相关单位</td>
            <td class="formValue">
                <input id="OtherRelatedUnits" type="text" class="form-control" />
            </td>
            <td class="formTitle">农其他相关单位签字时间</td>
            <td class="formValue">
                <input id="RelatedUnitsSignDate" type="text" class="form-control" value="@LeaRun.Util.Time.GetToday()" />
            </td>
        </tr>
    </table>
</div>
